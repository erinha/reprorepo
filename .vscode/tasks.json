{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Custom watch",
            "type": "npm",
            "script": "watch",
            "problemMatcher": {
                // "owner": "typescript",
                "owner": "erin",
                // "base": "$tsc-watch",
                "applyTo": "allDocuments",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "^\\[\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)?\\] Starting compilation in watch mode\\.\\.\\."
                    },
                    "endsPattern": {
                        "regexp": "^\\[\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)?\\] (.*)Watching for file changes\\."
                    }
                },
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):\\s+|\\s+-\\s+)(error|warning|info)\\s+TS(\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "code": 5,
                    "message": 6
                }
            },
            "isBackground": true
        },
        // {
        //     "label": "Custom watch extends tsc-watch",
        //     "type": "npm",
        //     "script": "watch",
        //     "isBackground": true,
        //     "problemMatcher": {
        //         "owner": "typescript",
        //         "base": "$tsc-watch",
        //         "applyTo": "allDocuments"
        //     }
        // }
    ]
}